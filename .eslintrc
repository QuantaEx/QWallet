{
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "react-native"
    ],
    "parserOptions": {
      "ecmaFeatures": {
          "jsx": true,
          "modules": true
      }
    },
    "extends" : [
      "eslint:recommended",
      "plugin:react/recommended",
      "airbnb-base"
    ],
    "rules" : {
      "arrow-body-style": ["error", "always"],
      "react/prop-types": 0,
      "no-use-before-define": 0,
      "no-return-assign": 0,
      "class-methods-use-this": 0,
      "prefer-destructuring": 0
    }
  }